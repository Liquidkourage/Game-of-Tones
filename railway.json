{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": [
            "npm run install-all"
          ]
        },
        "build": {
          "cmds": [
            "npm run build"
          ]
        },
        "start": {
          "cmds": [
            "node server/index.js"
          ]
        }
      }
    }
  }
}

