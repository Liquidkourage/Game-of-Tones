{
  "name": "game-of-tones",
  "version": "1.0.0",
  "description": "A modern music bingo game with Spotify integration",
  "main": "server/index.js",
  "engines": {
    "node": ">=18 <20"
  },
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && cross-env CI=false npm install --no-audit --no-fund --no-optional --ignore-scripts && npm run build",
    "install-client": "cd client && npm install",
    "install-server": "npm install",
    "install-all": "npm run install-server && npm run install-client",
    "start": "node server/index.js"
  },
  "keywords": [
    "music",
    "bingo",
    "spotify",
    "game",
    "real-time"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "pg": "^8.11.3",
    "socket.io": "^4.7.2",
    "spotify-web-api-node": "^5.0.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.1"
  }
}
